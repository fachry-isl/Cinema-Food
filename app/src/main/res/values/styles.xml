<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="roundedBottomImageView">
        <item name="cornerSizeBottomRight">10%</item>
        <item name="cornerSizeBottomLeft">10%</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerSize">15%</item>
    </style>

    <style name="title_order_type">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="title_beverages">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="radiogroup_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="radiobutton_style">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@drawable/radio_button_background_selector</item>
        <item name="android:button">@drawable/radio_button_background_selector</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>